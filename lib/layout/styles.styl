.Layout
	display: flex
	flex-direction: column
	justify-content: space-between
	padding: .5em	
	margin: .5em
	min-height 100vh
	background-image url('../img/city.jpg')
	background-size cover
	test(brown)
	> section		
		margin: .5em
	&-main
		display: flex
		justify-content: space-between
	&-status
		test(green)
		width: 200px
	&-battle
		test(orange)
		flex 1 
		margin: 0 .5em
		background-image url('../img/pattern.jpg')
	&-phases
		background-color white
		test(purple)
		width: 200px
		position: relative
	&-antagonist 
		test(aquamarine)
		display: flex
		justify-content: space-between		
	&-player 
		test(grey)
		display: flex
		justify-content: space-between